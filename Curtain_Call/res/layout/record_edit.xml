<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecordEdit" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="400dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 2" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 3" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 4" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 5" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 6" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 7" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 8" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 9" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 10" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 11" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Line 12" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/meButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:text="Me" />

    <Button
        android:id="@+id/themButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/meButton"
        android:layout_alignBottom="@+id/meButton"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_marginRight="33dp"
        android:text="Them" />

</RelativeLayout>