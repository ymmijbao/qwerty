<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/light_blue"
    tools:context=".RehearseActivity" >
    
    <!-- Title of play and scene -->
    <TextView
        android:id="@+id/text_play_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="Romeo and Juliet" />
    
    <TextView
        android:id="@+id/text_scene_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_play_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:textSize="22sp"
        android:text="Act V" />
    
	<!-- Scrollview displaying the scene's lines. -->
	<ScrollView
	    android:id="@+id/view_lines"
	    android:layout_width="match_parent"
	    android:layout_height="200dp"
	    android:layout_below="@id/text_scene_title"
	    android:layout_centerHorizontal="true"
	    android:padding="5dp"
	    android:background="@drawable/scrollview_rounded_corners" >
	    
	    <TableLayout
	        android:id="@+id/view_table_lines"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:orientation="vertical" >
	    	
	        <!-- TableRows programmatically generated by populateSceneLineDisplay() -->
			
	    </TableLayout>
	    
	</ScrollView>
   
    <!-- Start playback, starting from the currently selected line. -->
    <ImageButton
        android:id="@+id/button_play"
        android:contentDescription="@string/button_play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/view_lines"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@drawable/play_button" />
    
    <!-- Skip to the previous scene in the script. -->
    <Button
        android:id="@+id/button_previous_scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_rounded_corners"
        android:textSize="15dp"
        android:text="@string/button_previous_scene" />
    
    <!-- Skip to the next scene in the script. -->
    <Button
        android:id="@+id/button_next_scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_rounded_corners"
        android:textSize="15dp"
        android:text="@string/button_next_scene" />
	
</RelativeLayout>
