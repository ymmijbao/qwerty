<?xml version="1.0" encoding="utf-8"?>

<!-- SOURCE: http://tips.androidhive.info/2013/09/android-layout-rounded-corner-border/ -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
 
    <!-- Background color -->
    <solid
        android:color="@color/background_scrollview" >
    </solid>
 
    <!-- Border -->
    <!-- 
    <stroke
        android:width="3dp"
        android:color="@color/black" >
    </stroke>
    -->
 
    <!-- Padding -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" >
    </padding>
 
    <!-- Corner radius -->
    <corners
        android:radius="10dp" >
    </corners>
 
</shape>