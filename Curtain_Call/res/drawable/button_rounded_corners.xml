<?xml version="1.0" encoding="utf-8"?>

<!-- SOURCE: http://tips.androidhive.info/2013/09/android-layout-rounded-corner-border/ -->

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- If button is being pressed -->
	<item android:state_pressed="true">
		<shape
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    
		    <!-- Background color -->
		    <solid
		        android:color="@color/red" >
		    </solid>
		 
		    <!-- Border -->
		    <stroke
		        android:width="3dp"
		        android:color="@color/black" >
		    </stroke>
		    
		    <!-- Padding -->
		    <padding
		        android:left="10dp"
		        android:top="10dp"
		        android:right="10dp"
		        android:bottom="10dp" >
		    </padding>
		 
		    <!-- Corner radius -->
		    <corners
		        android:radius="10dp"
		        android:topLeftRadius="10dp"
		        android:bottomLeftRadius="10dp" >
		    </corners>
		 
		</shape>
	</item>
	<item>
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" >
		    
		    <!-- Background color -->
		    <solid
		        android:color="@color/cream" >
		    </solid>
		 
		    <!-- Border -->
		    <stroke
		        android:width="3dp"
		        android:color="@color/black" >
		    </stroke>
		    
		    <!-- Padding -->
		    <padding
		        android:left="10dp"
		        android:top="10dp"
		        android:right="10dp"
		        android:bottom="10dp" >
		    </padding>
		 
		    <!-- Corner radius -->
		    <corners
		        android:radius="10dp"
		        android:topLeftRadius="10dp"
		        android:bottomLeftRadius="10dp" >
		    </corners>
		</shape>
	</item>
</selector>